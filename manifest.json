{
  "manifest_version": 3,
  "name": "Snip & Ask - AI Screen Assistant",
  "short_name": "Snip & Ask",
  "version": "1.1",
  "description": "Snip any part of your screen and ask AI to explain, solve, or debug it. Supports Groq, Gemini, OpenRouter, and Ollama.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/tesseract.min.js",
        "lib/worker.min.js",
        "lib/tesseract-core.wasm.js",
        "lib/tesseract-core.wasm",
        "lib/eng.traineddata.gz",
        "lib/katex.min.js",
        "lib/katex.min.css",
        "lib/purify.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "commands": {
    "start-snip": {
      "description": "Start screen snip"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}