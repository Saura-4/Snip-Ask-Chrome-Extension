{
  "manifest_version": 3,
  "name": "Groq Snip & Ask",
  "version": "3.1",
  "description": "Snip any part of your screen and ask AI (Llama 3) to explain, solve, or debug it.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://api.groq.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["utils.js", "content.js"] 
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}